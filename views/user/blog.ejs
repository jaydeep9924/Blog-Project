
<%- include('header') %>

				<section class="page-heading wow fadeIn" data-wow-duration="1.5s" style="background-image: url(/files/images/01-heading.jpg)">
					<div class="container">
						<div class="page-name">
							<h1>hello</h1>
							<span>Lorem ipsum</span>
						</div>
					</div>
				</section>
				
				<section class="blog-single">
					<div class="container">
						<div class="row">
							<div class="col-md-8">
								<div class="blog-single-item">
									<img src="<%= blogRecord.profile %>" alt="">
									<div class="blog-single-content">	
										<h3><a href="#"><%= blogRecord.title %></a></h3>
										<span><a href="#"><%= blogRecord.name %></a> / <a href="#"><%= blogRecord.date %></a> </span>
										<p>Content <br><br> <em><i class="fa fa-info"></i>Quis, sequi illo nobis velit. Quas minima corporis quis laborum, ex odit natus.</em><br><%= blogRecord.desc %></p>
										<div class="share-post">
											<span>Share on: <a href="#">facebook</a>, <a href="#">twitter</a>, <a href="#">linkedin</a>, <a href="#">instagram</a></span>
										</div>
									</div>
									
								<% if(nextButton[prev-1]){ %>
									<div class="prev-btn col-md-6 col-sm-6 col-xs-6">
										<a href="/user/blog/<%= nextButton[prev-1] %>">Previous<i class="fa fa-angle-left"></i></a>
									</div>
								<% } %>	
								
								<% if(nextButton[next+1]){ %>
									<div class="next-btn col-md-6 col-sm-6 col-xs-6">
										<a href="/user/blog/<%= nextButton[next+1] %>">Next<i class="fa fa-angle-right"></i></a>
									</div>	
								<% } %>
					
								
								</div>
								<div class="blog-comments">
									<h2><%= commentcount %> Comment</h2>

									<!-- SECOND METHOD  -->
									<!-- <ul class="coments-content">
										<% var a=1; for(var comm of commentPrint){ %>
												<li>
													<img src="<%= comm.image %>" alt="">
													<span class="author-title">Name : <%= comm.name %></span>
													<p>comment : <%= comm.comment %></p>
												</li>
										<% a++;} %>
									</ul> -->
									
									<ul class="coments-content">
										<% var a=1; for(var comm of commentPrint){	
											 if(a%2 ==1){ %>
												<li class="first-comment-item">
													<img src="<%= comm.image %>" alt="">
													<span class="author-title">Name : <%= comm.name %></span>
													<p>comment : <%= comm.comment %></p>
												</li>
												<% } else{ %>
												<li class="second-comment-item">
													<img src="<%= comm.image %>" alt="">
													<span class="author-title">Name : <%= comm.name %></span>
													<p>comment : <%= comm.comment %></p>
												</li>
										<% } a++;} %>
	
									</ul>
								
								</div>
								<div class="submit-comment col-sm-12">
									<h2>Leave A Comment</h2>

									<form  method="post" enctype="multipart/form-data" action="/user/comment">
										<input type="hidden" name="blogIdData" value="<%= blogIdData %>">

										<div class=" col-md-4 col-sm-4 col-xs-6">
											<input type="text" class="blog-search-field" name="name" placeholder="Your name..." >
										</div>
										<div class="col-md-4 col-sm-4 col-xs-6">
											<input type="text" class="blog-search-field" name="email" placeholder="Your email..." >
										</div>
										<div class="col-md-4 col-sm-4 col-xs-12">
											<input type="file"  name="image">
										</div>
										<div class="col-md-12 col-sm-12">
											<textarea class="input" name="comment" placeholder="Comment..."></textarea>
										</div>
										<div class="submit-coment col-md-12">
												<button type="submit" class="btn btn-success" name="save">submit now</button>
										</div>
									</form>		

								</div>
							</div>
							<div class="col-md-4">
								<div class="widget-item">
									<h2>Search here</h2>
									<div class="dec-line"></div>
									<form method="get" id="blog-search" class="blog-search">
										<input type="text" class="blog-search-field" name="s" placeholder="Type keyword..." value="">
									</form>
								</div>
								<div class="widget-item">
									<h2>About Us</h2>
									<div class="dec-line">	
									</div>
									<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Similique earum quod iste, natus quaerat facere a rem dolor sit amet, et placeat nemo.</p>
									<div class="social-icons">
										<ul>
											<li><a href="#"><i class="fa fa-facebook"></i></a></li>
											<li><a href="#"><i class="fa fa-twitter"></i></a></li>
											<li><a href="#"><i class="fa fa-google-plus"></i></a></li>
											<li><a href="#"><i class="fa fa-instagram"></i></a></li>
											<li><a href="#"><i class="fa fa-rss"></i></a></li>
										</ul>
									</div>
								</div>
								<div class="widget-item">
									<h2>Recent Posts</h2>
									<div class="dec-line"></div>
									<ul class="recent-item">

										<% for(var las of lastRecordShow){ %>
										<li class="recent-post-item">
											<a href="/user/blog/<%= las.id %>">
												<img src="../..<%= las.profile %>" alt="">
												<span class="post-title"><%= las.title %></span>
											</a>
											<span class="post-info"><%= las.date %></span>
										</li>
										<% } %>

									</ul>
								</div>
								<div class="widget-item">
									<h2>From Flickr</h2>
									<div class="dec-line"></div>
									<div class="flickr-feed">
							        	<ul class="flickr-images">
							        	</ul>
							        </div>
								</div>
							</div>
						</div>
					</div>	
				</section>


